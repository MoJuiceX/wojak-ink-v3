# Wojak.ink Cloudflare Headers
# https://developers.cloudflare.com/pages/configuration/headers/

# Global security headers
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()

# Homepage - preload critical assets for LCP
/
  Link: </icons/icon-192.png>; rel=preload; as=image
  Link: </assets/banners/og-image.png>; rel=preload; as=image

# Static assets - immutable cache (1 year)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# JS/CSS bundles - immutable cache (hashed filenames)
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

# Icons and images - long cache
/icons/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - immutable cache
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# NFT images - long cache (they don't change)
/assets/nft-images/*
  Cache-Control: public, max-age=31536000, immutable

# NFT metadata - long cache
/assets/nft-data/*
  Cache-Control: public, max-age=86400

# Audio files - long cache
/audio/*
  Cache-Control: public, max-age=31536000, immutable

/music/*
  Cache-Control: public, max-age=31536000, immutable

# Service worker - no cache (needs fresh)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - short cache for PWA updates
/manifest.json
  Cache-Control: public, max-age=3600

# Sitemap and robots - moderate cache
/sitemap.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400

/llms.txt
  Cache-Control: public, max-age=86400

# API responses should not be cached by CDN (handled by workers)
/api/*
  Cache-Control: no-store
